generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// --- Enums ---

enum UserRole {
  USER
  MEMBER
  EXECUTIVE
  ADMIN
  SUPER_ADMIN
}

enum RegistrationType {
  MEMBER_APPLY
  EVENT_PARTICIPATION
  WORKSHOP
  BCC_COURSE
}

enum StatusType {
  APPROVED
  REJECTED
  PENDING
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

// --- Models ---

model User {
  id            String    @id @map("_id")
  name          String?
  email         String?   @unique
  emailVerified Boolean   @default(false)
  image         String?

  role          UserRole  @default(USER)
  membershipId  String?   @unique
  isExecutive   Boolean?  @default(false)

  points        Int       @default(0)
  banned        Boolean   @default(false)
  banReason     String?
  banExpires    DateTime?

  studentId     String    @unique
  department    String
  batch         String?
  gender        String?

  phoneNumber   String
  showPhone     Boolean   @default(false)
  showEmail     Boolean   @default(false)

  twoFactorEnabled Boolean @default(false)
  secret           String?
  backupCodes      String?

  // Relations
  registrations Registration[]
  payments      Payment[]
  projects      Project[]
  posts         Post[]
  accounts      Account[]
  sessions      Session[]
  twoFactor     TwoFactor?

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("users")
}

model Account {
  id                    String   @id @map("_id")
  userId                String
  accountId             String
  providerId            String
  provider              String?
  password              String?
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Session {
  id        String   @id @map("_id")
  expiresAt DateTime
  token     String   @unique
  ipAddress String?
  userAgent String?
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Verification {
  id         String   @id @map("_id")
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("verification")
}

model TwoFactor {
  id          String @id @map("_id")
  secret      String
  backupCodes String
  userId      String @unique
  user        User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("twoFactor")
}

model Registration {
  id        String           @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  type      RegistrationType @default(MEMBER_APPLY)
  status    StatusType       @default(PENDING)
  
  eventId   String?          @db.ObjectId
  event     Event?           @relation(fields: [eventId], references: [id], onDelete: SetNull)
  vivaMark      Int?             @default(0)   
  vivaComment   String?        
  isAttended    Boolean          @default(false)

  payments  Payment[]
  appliedAt DateTime         @default(now())

  @@map("registrations")
}

model Event {
  id            String         @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  fee           Int?         @default(0)
  isPaid        Boolean       @default(true)
  description   String
  image         String
  deadline      DateTime
  registrations Registration[]

  @@map("events")
}

model Project {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  link     String?
  authorId String
  author   User    @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@map("projects")
}

model Post {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  content  String
  image    String?
  authorId String
  author   User    @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@map("posts")
}

model Payment {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId
  amount         String
  transactionId  String        @unique
  provider       String?
  status         PaymentStatus @default(PENDING)

  userId         String
  user           User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  registrationId String        @db.ObjectId
  registration   Registration  @relation(fields: [registrationId], references: [id], onDelete: Cascade)

  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@map("payments")
}